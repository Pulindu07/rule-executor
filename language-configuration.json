{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(rules|patterns|pattern-either|languages|paths|metadata):\\s*$",
        "decreaseIndentPattern": "^\\s*([}\\])]|\\s*- \\w+:)\\s*$"
    },
    "folding": {
        "markers": {
            "start": "^\\s*(rules|patterns|pattern-either|languages|paths|metadata):\\s*$",
            "end": "^\\s*$"
        }
    }
}